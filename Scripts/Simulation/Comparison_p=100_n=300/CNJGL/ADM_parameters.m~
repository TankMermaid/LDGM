%% ------------- SET PARAMETERS FOR ADM ALGORITHM -------------- %%



%opts.rho_init = 0.2;
%opts.rho_init = 0.1;
opts.rho_init = 1;
%opts.rho_init = 3125;
opts.maxiter = 300;
opts.eps = 1e-6;
opts.homotopy = 5; %Scaling parameter for rho
%opts.homotopy = 2;
%opts.homotopy = 10;
%opts.homotopy = 1.5;
opts.rho_max = 625;
%opts.rho_max = 3125;
%opts.rho_max = 2048;
%opts.rho_max = 1e+4;
%opts.rho_max = 1.5^20*opts.rho_init;
if(opts.rho_max/opts.rho_init == 1)
    opts.homotopy_size = 1;
else
opts.homotopy_size = ceil(log(opts.rho_max)/log(opts.homotopy)) + 1;
end;
